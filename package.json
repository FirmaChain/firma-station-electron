{
  "name": "firma-station-electron",
  "version": "1.0.1",
  "license": "ISC",
  "homepage": "./",
  "description": "A desktop application to interact with Firma Chain.",
  "author": "Firma <developer@firmachain.org> (https://firmachain.org)",
  "main": "public/electron.js",
  "devDependencies": {
    "electron": "^16.0.3",
    "electron-builder": "^22.14.5"
  },
  "dependencies": {
    "electron-debug": "^3.2.0"
  },
  "scripts": {
    "build": "electron-builder build --publish never"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.firmachain.station",
    "productName": "Firma Station",
    "copyright": "Copyright Â© 2021 FirmaChain",
    "artifactName": "${productName}-${os}-${arch}-${version}.${ext}",
    "asar": true,
    "extends": null,
    "asarUnpack": "**\\*.{node,dll}",
    "files": [
      "public/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Development",
      "icon": "build/icon.icns"
    },
    "mac": {
      "category": "public.app-category.financial",
      "target": {
        "target": "dmg",
        "arch": "universal"
      },
      "icon": "build/icon.icns"
    },
    "dmg": {
      "title": "Firma Station",
      "window": {
        "width": 540,
        "height": 370
      },
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "installerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "createDesktopShortcut": true
    }
  }
}
